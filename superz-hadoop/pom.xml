        <version>0.2.2</version>
    </parent>
    <modelVersion>4.0.0</modelVersion>

    <artifactId>superz-hadoop</artifactId>
    <packaging>pom</packaging>
    <modules>
        <module>superz-hadoop-hdfs</module>
        <module>superz-hadoop-mapreduce</module>
        <module>superz-hadoop-yarn</module>
        <module>superz-hadoop-hive</module>
        <module>superz-hadoop-hbase</module>
        <module>superz-hadoop-spark</module>
        <module>superz-hadoop-flink</module>
        <module>superz-hadoop-elasticsearch</module>
        <module>superz-hadoop-kafka</module>
        <module>superz-hadoop-zookeeper</module>
        <module>superz-hadoop-install</module>
        <module>superz-hadoop-hudi</module>
    </modules>

    <properties>
        <maven.compiler.source>8</maven.compiler.source>
        <maven.compiler.target>8</maven.compiler.target>
        <log4j.version>2.9.1</log4j.version>
        <hadoop.version>3.2.2</hadoop.version>
        <zookeeper.version>3.6.3</zookeeper.version>
        <hive.version>3.1.2</hive.version>
        <hbase.version>2.2.3</hbase.version>
        <spark.version>3.0.0</spark.version>
        <flink.version>1.12.2</flink.version>
        <kafka.version>2.2.1</kafka.version>
        <elasticsearch.version>6.8.23</elasticsearch.version>
    </properties>

    <dependencies>
        <!--日志模块-->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.26</version>
        </dependency>
        <!-- 统一掉hadoop的日志具体实现，注：不推荐 -->
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-log4j12</artifactId>
            <version>1.7.26</version>
        </dependency>
        <dependency>
            <groupId>log4j</groupId>
            <artifactId>log4j</artifactId>
            <version>1.2.17</version>
        </dependency>
    </dependencies>

</project>