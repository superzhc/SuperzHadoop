{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://superzhc.github.com/schemas/ddl_json_schema.json",
  "type": "object",
  "properties": {
    "table_name": {
      "type": "string",
      "pattern": "^[_a-zA-Z][_a-zA-Z0-9]*?",
      "minLength": 1
    },
    "fields": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "field_name": {
            "type": "string",
            "minLength": 1
          },
          "field_type": {
            "type": "string"
          },
          "field_is_not_null": {
            "type": "boolean"
          },
          "field_default_value": {
            "type": [
              "number",
              "string",
              "boolean"
            ]
          },
          "field_comment": {
            "type": "string"
          }
        },
        "required": [
          "field_name",
          "field_type"
        ]
      }
    },
    "primary_key": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "partition": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "table_comment": {
      "type": "string"
    }
  },
  "required": [
    "table_name",
    "fields"
  ]
}