{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://superzhc.github.com/schemas/ddl_json_schema.json",
  "type": "object",
  "properties": {
    "table_name": {
      "type": "string",
      "minLength": 1
    },
    "fields": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "field_name": {
            "type": "string",
            "minLength": 1
          },
          "field_type": {
            "enum": [
              "bool",
              "short",
              "int",
              "long",
              "float",
              "double",
              "string"
            ]
          },
          "is_not_null": {
            "type": "boolean"
          },
          "default": {
            "type": [
              "number",
              "string",
              "boolean"
            ]
          },
          "field_comment": {
            "type": "string"
          }
        }
      }
    },
    "primary_key": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "table_comment": {
      "type": "string"
    }
  }
}